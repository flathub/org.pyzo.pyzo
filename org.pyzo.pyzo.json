{
  "app-id": "org.pyzo.pyzo",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "pyzo",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-download",
    "--talk-name=com.canonical.AppMenu.Registrar"
  ],
  "modules": [
    {
      "name": "sip",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=${FLATPAK_DEST} --no-build-isolation sip"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/source/s/sip/sip-6.8.3.tar.gz",
          "sha256": "c068d02fe7247c1dec7073c7d8a1b92c2e6ddcb7a8642bf4e0e141e58c5d10f2"
        }
      ]
    },
    {
      "name": "python3-pyqt5-sip",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=${FLATPAK_DEST} --no-build-isolation PyQt5_sip"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/source/P/PyQt5_sip/PyQt5_sip-12.15.0.tar.gz",
          "sha256": "f17a348c951e74100bbd3f75c244ec2c2d0a4403c6e1960cc6bfb1f0dc147bc4"
        }
      ]
    },
    {
      "name": "python3-pyqt5-qt5",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=${FLATPAK_DEST} --no-build-isolation pyqt5-qt5"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/source/p/pyqt5-qt5/pyqt5-qt5-5.15.14.tar.gz",
          "sha256": "b68c1a1e66037a4ee83b45a2048bf2a3e7fa09e3db7847285da6af9b88da7dc8"
        }
      ]
    },
    {
      "name": "python3-pyqt5",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --prefix=${FLATPAK_DEST} --no-build-isolation PyQt5"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://files.pythonhosted.org/packages/source/P/PyQt5/PyQt5-5.15.11.tar.gz",
          "sha256": "0222b439698f3fb7de6b97a7aa85534ff16c5c93d3536bc3a1e9b0d09c543d2e"
