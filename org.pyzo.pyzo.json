{
  "app-id": "org.pyzo.Pyzo",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "pyzo",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-download"
  ],
  "modules": [
    {
      "name": "python3-pyqt6",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --verbose --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} PyQt6-6.7.0-py3-none-any.whl --no-build-isolation"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://files.pythonhosted.org/packages/xx/xx/PyQt6-6.7.0-py3-none-any.whl",
          "sha256": "sha256_exact_du_fichier"
        }
      ]
    },
    {
      "name": "pyzo",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --verbose --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} pyzo-4.20.0-py3-none-any.whl --no-build-isolation",
        "install -Dm644 org.pyzo.Pyzo.desktop ${FLATPAK_DEST}/share/applications/org.pyzo.Pyzo.desktop",
        "install -Dm644 org.pyzo.Pyzo.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/org.pyzo.Pyzo.svg",
        "install -Dm644 org.pyzo.Pyzo.metainfo.xml ${FLATPAK_DEST}/share/metainfo/org.pyzo.Pyzo.metainfo.xml"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://files.pythonhosted.org/packages/92/25/1d8032ebcc569f10729f754e22b9c97a43f016e0dcd726e7c9ad3e9fed15/pyzo-4.20.0-py3-none-any.whl",
          "sha256": "4415fb39b098e7ac6428c369340c73c7b4907454ccca549315ec6b873d72478a"
        },
        {
          "type": "file",
          "path": "org.pyzo.Pyzo.desktop"
        },
        {
          "type": "file",
          "path": "org.pyzo.Pyzo.svg"
        },
        {
          "type": "file",
          "path": "org.pyzo.Pyzo.metainfo.xml"
        }
      ]
    }
  ]
}

